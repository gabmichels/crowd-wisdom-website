<style>
  .policy-container {
    max-width: 800px;
    margin: 120px auto 80px;
    padding: 0 20px;
    font-family: 'Poppins', sans-serif;
  }
  
  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }
  
  .last-updated {
    font-style: italic;
    color: #666;
    margin-bottom: 2rem;
  }
  
  section {
    margin-bottom: 2.5rem;
  }
  
  h2 {
    font-size: 1.8rem;
    margin-bottom: 1rem;
    color: var(--text-color);
    border-bottom: 1px solid #eee;
    padding-bottom: 0.5rem;
  }
  
  h3 {
    font-size: 1.4rem;
    margin: 1.5rem 0 0.8rem;
    color: var(--text-color);
  }
  
  p, ul, address {
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 1rem;
    color: #333;
  }
  
  ul {
    padding-left: 1.5rem;
    margin-bottom: 1.5rem;
  }
  
  li {
    margin-bottom: 0.5rem;
  }
  
  a {
    color: var(--accent-color);
    text-decoration: none;
  }
  
  a:hover {
    text-decoration: underline;
  }
  
  strong {
    font-weight: 600;
  }
  
  address {
    font-style: normal;
    line-height: 1.6;
  }
  
  @media (max-width: 768px) {
    .policy-container {
      margin: 100px auto 60px;
    }
    
